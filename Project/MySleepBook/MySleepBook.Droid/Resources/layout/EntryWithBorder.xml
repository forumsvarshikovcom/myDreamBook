<?xml version="1.0" encoding="UTF-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

  //You can change the color of the edit text here which removes the border line as well
  <item android:state_focused="true" >
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#f6e2c1"
          android:endColor="#f6e2c1"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#009788" />
      <corners
          android:radius="5dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#f6e2c1"
          android:endColor="#f6e2c1"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#009788" />
      <corners
          android:radius="5dp" />
    </shape>
  </item>
</selector>
